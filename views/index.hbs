  <!-- page content -->
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        
        <!-- new post form-->
        <form class="form-inline" id="create-post">
          <div class="form-group">
            <input type="text" name="title" class="form-control" placeholder="Title" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="description" class="form-control" placeholder="Description">
          </div>
          <div class="form-group">
            <input type="submit" class="btn btn-default" value="Add Post">
          </div>
        </form>
        <br>

        <!-- list of posts -->
        <ul class="list-group" id="posts-list">
          
          <!-- handlebars template -->
          <script id="posts-template" type="text/x-handlebars-template">
            \{{#each posts}}
              <li class="list-group-item post" data-id="\{{_id}}">

                <!-- post label (title) -->
                <span class="label label-default">\{{title}}</span>
                
                <!-- post description -->
                \{{description}}

                <div class="pull-right">
                  <!-- pencil icon to toggle update form -->
                  <a href="javascript:void(0)" data-toggle="collapse" data-target="#update-\{{_id}}">
                    <span class="glyphicon glyphicon-pencil"></span>
                  </a>
                  
                  <!-- trash can icon to delete post -->
                   <a href="javascript:void(0)" class="delete-post">
                    <span class="glyphicon glyphicon-trash"></span>
                  </a>
                </div>
                
                <!-- form to update post -->
                <div class="collapse" id="update-\{{_id}}">
                  <br>
                  <form class="form-inline update-post">
                    <div class="form-group">
                      <input type="text" name="title" class="form-control" placeholder="Title" value="\{{title}}">
                    </div>
                    <div class="form-group">
                      <input type="text" name="description" class="form-control" placeholder="Description" value="\{{description}}">
                    </div>
                    <div class="form-group">
                      <input type="submit" class="btn btn-block btn-default" value="Update">
                    </div>
                  </form>
                </div>
              </li>
            \{{/each}}
          </script>
        </ul>
      </div>
    </div>
  </div>

  <div class="footer">
