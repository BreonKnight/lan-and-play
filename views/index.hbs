{{> header}}

  <!-- header -->
  <div class="jumbotron">
    <div class="container">
      <div class="row" id="bg">
        <div class="col-md-12">
          <br>
          <br>
          <br>
          <br>
          <br>
          <br>
          <br>
          <br>
          <br>
          <br>
          <h1>Lan and Play! Get Your Game on <br> <small> Join the community where you meet new people and have fun gaming</small>
          </h1>
        </div>
      </div>
    </div> 
  </div>
  <!-- page content -->
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        {{#if user}}
        <!-- new event form-->
          <form class="form-inline" id="create-event">
            <div class="form-group">
              <input type="text" name="title" class="form-control" placeholder="Title" autofocus>
            </div>
            <div class="form-group">
              <input type="text" name="description" class="form-control" placeholder="Description">
            </div>
            <div class="form-group">
              <input type=date>
            </div>
            <div class="form-group">
              <input type="text" name="location" class="form-control" placeholder="location" autofocus>
            </div>
            <div class="form-group">
              <input type="submit" class="btn btn-default" value="Add event">
            </div>
          </form>
          <br>
        {{/if}}
        <!-- list of events -->
        <ul class="list-group" id="events-list">
          
          <!-- handlebars template -->
          <script id="events-template" type="text/x-handlebars-template">
            \{{#each events}}
              <li class="list-group-item event" data-id="\{{_id}}">

                <!-- event label (title) -->
                <span class="label label-default">\{{title}}</span>
                
                <!-- event description -->
                \{{description}}

                <div class="pull-right">
                  <!-- pencil icon to toggle update form -->
                  <a href="javascript:void(0)" data-toggle="collapse" data-target="#update-\{{_id}}">
                    <span class="glyphicon glyphicon-pencil"></span>
                  </a>
                  
                  <!-- trash can icon to delete event -->
                   <a href="javascript:void(0)" class="delete-event">
                    <span class="glyphicon glyphicon-trash"></span>
                  </a>
                </div>
                
                <!-- form to update event -->
                <div class="collapse" id="update-\{{_id}}">
                  <br>
                  <form class="form-inline update-event">
                    <div class="form-group">
                      <input type="text" name="title" class="form-control" placeholder="Title" value="\{{title}}">
                    </div>
                    <div class="form-group">
                      <input type="text" name="description" class="form-control" placeholder="Description" value="\{{description}}">
                    </div>
                    <div class="form-group">
                      <input type="submit" class="btn btn-block btn-default" value="Update">
                    </div>
                  </form>
                </div>
              </li>
            \{{/each}}
          </script>
        </ul>
      </div>
    </div>
  </div>

  <div class="footer">
    <div class="container">
      <p class="text-muted pull-left"> Lan And Play </p>
    </div>
  </div>
  
  <!-- jquery -->
  <script type="text/javascript" src="https://code.jquery.com/jquery-1.11.3.min.js"></script>

  <!-- bootstrap js -->
  <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

  <!-- handlebars -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.3/handlebars.min.js"></script>

  <!-- custom script -->
  <script type="text/javascript" src="js/app.js"></script>
</body>
</html>